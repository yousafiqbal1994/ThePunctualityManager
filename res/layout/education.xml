<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fancy="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="20dp"
            android:text="University"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/uni_to"
                android:layout_width="60dp"
                android:text="To"
                android:textSize="10sp"
                android:layout_marginRight="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/uni_from"
                android:layout_width="60dp"
                android:text="From"
                android:textSize="10sp"
                android:layout_marginLeft="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/uni_end_date"
                android:layout_width="wrap_content"
                android:layout_marginRight="55dp"
                android:layout_alignRight="@+id/uni_to"
                android:layout_alignEnd="@+id/uni_to"
                android:layout_below="@+id/uni_to"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/uni_start_date"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/uni_from"
                android:layout_alignLeft="@+id/uni_from"
                android:layout_alignStart="@+id/uni_from"
                android:layout_marginStart="15dp" />

        </RelativeLayout>

        <TextView
            android:text="Name"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/uni_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:inputType="textCapWords"
                android:hint="Ex: NUST" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:text="Major"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/uni_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:inputType="textCapWords"
                android:hint="Ex: BS Software Engineering" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:text="Grades"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">

            <EditText android:id="@+id/uni_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:inputType="textCapWords"
                android:hint="Ex: CGPA/%" />
        </android.support.design.widget.TextInputLayout>

        <!--////////////////////////////End of University//////////////////////////-->


        <TextView
            android:text="College"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/colg_to"
                android:layout_width="60dp"
                android:text="To"
                android:textSize="10sp"
                android:layout_marginRight="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/colg_from"
                android:layout_width="60dp"
                android:text="From"
                android:textSize="10sp"
                android:layout_marginLeft="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <TextView
                android:id="@+id/colg_end_date"
                android:layout_width="wrap_content"
                android:layout_marginRight="55dp"
                android:layout_alignRight="@+id/colg_to"
                android:layout_alignEnd="@+id/colg_to"
                android:layout_below="@+id/colg_to"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/colg_start_date"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/colg_from"
                android:layout_alignLeft="@+id/colg_from"
                android:layout_alignStart="@+id/colg_from"
                android:layout_marginStart="15dp" />

        </RelativeLayout>

        <TextView
            android:text="Name"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/colg_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:inputType="textCapWords"
                android:hint="Ex: Islamia College" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:text="Major"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/colg_major"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:inputType="textCapWords"
                android:hint="Ex: Pre-Engineering" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:text="Grades"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/colg_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:inputType="textCapWords"
                android:hint="Ex: %/Grade" />
        </android.support.design.widget.TextInputLayout>

        <!--////////////////////////////End of College//////////////////////////-->





        <TextView
            android:text="School"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            />

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/scl_to"
                android:layout_width="60dp"
                android:text="To"
                android:textSize="10sp"
                android:layout_marginRight="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:id="@+id/scl_from"
                android:layout_width="60dp"
                android:text="From"
                android:textSize="10sp"
                android:layout_marginLeft="40dp"
                android:layout_height="40dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:id="@+id/scl_end_date"
                android:layout_width="wrap_content"
                android:layout_marginRight="55dp"
                android:layout_alignRight="@+id/scl_to"
                android:layout_alignEnd="@+id/scl_to"
                android:layout_below="@+id/scl_to"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <TextView
                android:id="@+id/scl_start_date"
                android:layout_width="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scl_from"
                android:layout_alignLeft="@+id/scl_from"
                android:layout_alignStart="@+id/scl_from"
                android:layout_marginStart="15dp" />

        </RelativeLayout>

        <TextView
            android:text="Name"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView11"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/scl_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:inputType="textCapWords"
                android:hint="Ex: Forward Model School" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:text="Grades"
            android:textStyle="bold"
            android:layout_gravity="left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            />
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp">
            <EditText android:id="@+id/scl_grade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:inputType="textCapWords"
                android:hint="Ex: %" />
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</ScrollView>